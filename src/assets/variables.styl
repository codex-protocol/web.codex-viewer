// Colors
// Keep in sync with custom-bootstrap.scss for global theming
$color-primary = #D6BD76
$color-secondary = #32194C
$color-secondary-accent = #896AA9
$color-black = #1D0F31
$color-gray = #707070
$color-light-gray = #C0C0C0
$color-active = #8557B5
$color-success = #46C37F
$color-warning = #EDB615
$color-danger = #D14F51
$color-dark = #1A0D2A
$color-light = lighten($color-primary, 50%)

// Fonts
$font-family-serif = "Playfair Display", Georgia, "Times New Roman", Times, serif;
$font-family-sans-serif = "Montserrat", "Helvetica Neue", Helvetica, Arial, sans-serif;

// Breakpoints
$breakpoint-xs = 0
$breakpoint-sm = 576px
$breakpoint-md = 768px
$breakpoint-lg = 992px
$breakpoint-xl = 1200px
